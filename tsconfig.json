{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@actions/*": [
                "src/actions/*"
            ],
            "@reducers/*": [
                "src/reducers/*"
            ],
        },
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2016",
            "es2017.object"
        ],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
